{% extends 'VizHAALVisplatBundle::layout.html.twig' %}
{% block graph %}
    {% if is_granted('ROLE_ADMIN') %}
        <!-- Heat Map -->
        <script src="{{ asset('bundles/vizhaalvisplat/js/heatmap_generation.js') }}"></script>
        <div class="col-lg-12 col-md-12 col-sm-12" style="height:100%;">
            <div class="col-lg-4 col-lg-push-7 col-md-4 col-sm-push-7 col-sm-4  col-xs-12" id="legend">
                <h2 class="head-legend">Heat Map</h2>
                <hr>
                <p class="p-legend">This map gives the frequency of the geographic points of the patients in a given time.</p>
            </div>
            <div class="col-lg-7 col-lg-pull-4 col-md-7 col-sm-pull-4 col-sm-7 col-xs-12" id="heatMapContainerWrapper">
            <canvas id="imageCanvas" style="position:absolute; z-index:-1;"></canvas>
            <div id="heatMapContainer"></div>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12"
             style="height:100%; width:100%; border: 1px solid transparent; background-color: #f8f8f8;border-color: #e7e7e7; ">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12" id="legend">
                <h2 class="head-legend">Details</h2>
                <hr>
                <p class="p-legend">This table details the above heat map. For each sensor, you can find the frequency of
                    occurences and the average duration of the sensor activation.</p>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12" id="heatmapTable">
        </div>
        <script>createHeatMap({{ mapUrl |json_encode| raw }} , {{ data|json_encode | raw }} , {{ details |json_encode| raw }})</script>
    {% endif %}
{% endblock %}